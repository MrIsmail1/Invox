{% extends 'base.html.twig' %}

{% set title = 'Invox | Réinitialisez votre mot de passe' %}

{% block body %}
    <main class="h-screen px-5 py-8 w-full ">
        <div class="border bg-bg-button h-full rounded-2xl">
            <div class="flex h-full justify-between">
                <div class="flex items-center w-1/2 justify-center border-r-2 my-16">
                    <img src="{{ asset('build/images/logoAuthentication.png') }}" alt="logoInvox" height="450"
                         width="450">
                </div>
                <div class="flex justify-center w-1/2">
                    {{ form_start(requestForm, {'attr': {'class': 'flex flex-col justify-center w-full h-full'}}) }}
                    <div class="flex flex-col justify-center gap-4 w-full px-20 h-5/6">
                        <h1 class="h1 mb-5 font-weight-bold text-bg-black">Réinitialisez votre mot de passe.</h1>
                        {{ form_row(requestForm.email) }}
                        <h6 class="text-pr-blue font-medium text-lg">
                            Saisissez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot
                            de passe.
                        </h6>
                        <div class="flex flex-col text-center">
                            <div class="mt-3">
                                <twig:ButtonDarkDefault type="submit" text="Valider"/>
                            </div>
                        </div>
                    </div>
                    {{ form_end(requestForm) }}
                </div>
            </div>

        </div>
    </main>
{% endblock body %}
