{% extends "base.html.twig" %}

{% set title = "Invoice" %}

{% block content %}
<div class="flex w-full bg-bg-white dark:bg-dark-pr-blue rounded-lg mt-12" >
    <div class="mx-10 lg:mx-20 mt-11 w-full overflow-auto">
        <div>
            <div>
                <h2>
                    {% if quotation is defined %}
                    Devis {{ quotation.id }}
                    {% else %}
                    Facture {{ invoice.id }}
                    {% endif %}
                </h2>
            </div>
        </div>
        <div class="flex mt-2 justify-between" >
            {% if quotation is defined %}
                <twig:QuotationCreator quotation="{{ quotation }}" />
            {% else %}
                <twig:InvoiceCreator invoice="{{ invoice }}" />
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}