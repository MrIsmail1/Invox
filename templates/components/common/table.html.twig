<div {{ attributes }} class="mb-4">
<div class="mt-4 rounded-lg p-4 flex items-center justify-between flex-column flex-wrap md:flex-row space-y-4 md:space-y-0 pb-4 bg-bg-white dark:bg-dark-pr-blue border-border-width border-border-color">
     <div x-data="{ open: false }">
        <p class="ml-1 dark:text-white-font">Status</p>
        <button  @click="open = ! open" class="dark:text-white-font mt-2 inline-flex items-center text-gray-500 bg-bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-3 py-1.5 dark:bg-dark-pr-blue dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700" type="button">
            Tout
            <svg class="w-2.5 h-2.5 ms-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
            </svg>
        </button>
        <!-- Dropdown menu -->
        <div x-show="open" @click.outside="open = false" class="mt-4 absolute z-10 bg-bg-white divide-y divide-gray-100 rounded-lg shadow w-44 {# dark:bg-gray-700 dark:divide-gray-600 #}">
            <ul class="py-1 text-sm text-gray-700 {# dark:text-gray-200 #}">
                <li>
                    <a href="#" class="block px-4 py-2 hover:bg-gray-100 {# dark:hover:bg-gray-600 dark:hover:text-white-font #}">Non payé</a>
                </li>
                <li>
                    <a href="#" class="block px-4 py-2 hover:bg-gray-100 {# dark:hover:bg-gray-600 dark:hover:text-white-font #}">En cours</a>
                </li>
                <li>
                    <a href="#" class="block px-4 py-2 hover:bg-gray-100 {# dark:hover:bg-gray-600 dark:hover:text-white-font #}">En retard</a>
                </li>
            </ul>
        </div>
    </div>

{# ------------------------------------------------------------------------------  Search Form ------------------------------------------------------------------------  #}
    
    {# {{ component('SearchLive', {
    dataModel: 'query',
    }) }} #}
    {# <twig:SearchLive /> #}
</div>

<div x-data="{ showModal: false }" class="mt-6 mb-8 overflow-x-auto rounded-lg border-border-color border-border-width">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:bg-dark-pr-blue">
        <thead class="text-sm uppercase bg-bg-white dark:bg-dark-pr-blue dark:text-white-font border-b-border-width border-border-color">
            <tr
            data-action="live#$render"
            data-model="Hamza"
            placeholder="Rechercher un client"
            
            data-action="live#emit"
            data-event="Hamza"
            >
                <th scope="col" class="">
                    
                </th>
                <th scope="col" class="px-6 py-3">
                {% if thead1 is not empty %}
                    {{ knp_pagination_sortable(data, thead1, 'a.id') }}
                {% endif %}
                </th>
                <th scope="col" class="px-6 py-3">
                {% if thead2 is not empty %}
                    {{ knp_pagination_sortable(data, thead2, 'a.customer') }}
                {% endif %}
                </th>
                <th scope="col" class="px-6 py-3">
                {% if thead3 is not empty %}
                    {{ knp_pagination_sortable(data, thead3, 'a.totalWithTaxes') }}
                {% endif %}
                </th>
                <th scope="col" class="px-6 py-3">
                {% if thead4 is not empty %}
                    {{ knp_pagination_sortable(data, thead4, 'a.isValid') }}
                {% endif %}
                </th>
                <th scope="col" class="px-6 py-3">
                {% if thead5 is not empty %}
                    {{ knp_pagination_sortable(data, thead5, 'a.expiresIn') }}
                {% endif %}
                </th>
                <th scope="col" class="px-6 py-3">
                {% if thead6 is not empty %}
                    {{ knp_pagination_sortable(data, thead6, 'a.expiresIn') }}
                {% endif %}
                </th>
                <th scope="col" class="px-6 py-3">
                    {{ thead7 }}
                </th>
            </tr>
        </thead>
        <tbody>
            {% for data in data %}
            <tr x-data="{ open: false }" class="bg-bg-white border-b border-b-border-color dark:bg-dark-pr-blue dark:border-gray-700 hover:bg-bg-hover-light dark:hover:bg-gray-600">
                <td class="w-4 p-4">
                    <div class="flex items-center">
                        <input id="checkbox-table-search-1" type="checkbox" class="w-4 h-4 text-link-color bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                        <label for="checkbox-table-search-1" class="sr-only">checkbox</label>
                    </div>
                </td>
                <td class="px-6 py-4 font-bold">
                    {{ data.id }}
                </td>
                <td class="px-6 py-4">
                    {{ data.customer }}
                </td>
                {% if data.totalWithTaxes is defined %}
                <td class="px-6 py-4">
                    {{ data.totalWithTaxes }} €
                </td>
                {% endif %}
                {% if data.isValid is defined %}
                <td class="px-6 py-4">
                    <div class="flex items-center">
                        {% if data.isValid %}
                            <twig:Status>
                                {% block content %}
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M9.54961 18L3.84961 12.3L5.27461 10.875L9.54961 15.15L18.7246 5.97498L20.1496 7.39998L9.54961 18Z"/>
                                    </svg>
                                    Payée
                                {% endblock %}
                            </twig:Status>
                        {% else %}
                            <twig:Status>
                                {% block content %}
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M6.75781 17.243L12.0008 12L17.2438 17.243M17.2438 6.75696L11.9998 12L6.75781 6.75696" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                    Non Payée
                                {% endblock %}
                            </twig:Status>
                        {% endif %}
                    </div>
                </td>
                {% endif %}
                {% if data.expiresIn is not empty and data.expiresIn is defined %}
                <td class="px-6 py-4">
                    {{ data.expiresIn|date('d-m-y') }}
                </td>
                {% endif %}
                {% if data.expiresIn is not empty and data.expiresIn is defined %}
                <td class="px-6 py-4">
                    {{ data.expiresIn|date('d-m-y') }}
                </td>
                {% endif %}
                <td class="px-6 py-4">
                    <div x-data="{ open: false }">
                        <twig:Button js="open = !open" content="Voir" />
{# ------------------------------------------------------------------------------  La modal show ------------------------------------------------------------------------ #}
                       <twig:Modal data="{{data}}" pathEdit="{{pathEdit}}" pathDelete="{{pathDelete}}" />
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{# ------------------------------------------------------------------------------  Pagination ------------------------------------------------------------------------ #}

{{ knp_pagination_render(data, 'components/common/pagination.html.twig') }}
</div>