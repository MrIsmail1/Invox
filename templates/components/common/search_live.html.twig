<div class="relative" {{ attributes }}>
<label for="table-search" class="sr-only">Search</label>
    <div class="absolute inset-y-0 rtl:inset-r-0 start-0 flex items-center ps-3 pointer-events-none">
        <svg class="w-4 h-4 text-gray-500 {# dark:text-gray-400 #}" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
        </svg>
    </div>
    <input
        type="text"
        data-model="query"
        {# value="{{ query }}" #}
        placeholder="Rechercher un client"
        {# data-target="live.query" #}
         
        
        class="block p-2 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg w-80 bg-bg-button focus:ring-blue-500 focus:border-blue-500 {# darkbg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white-font dark:focus:ring-blue-500 dark:focus:border-blue-500 #}"
    >

    {% if this.invoice|length > 0 %}
    
        <div data-loading="addClass(opacity-50)" class="mt-3 row">
            {% for invoice in this.invoice %}
            <li>ID: {{ invoice.id }},</li>
            <li>Client: {{ invoice.customer }},</li>

            {% endfor %}

        </div>
    {% else %}
        <div class="pt-3">Aucune facture trouv√© pour : "{{ query }}"</div>
    {% endif %}


    
</div>
